<% content_for :style do %>
	<link href='http://fonts.googleapis.com/css?family=Cedarville+Cursive|Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
	<style>
		.relax.canvas {position:relative; padding:60px 0 60px 60px; font-family: 'Open Sans Condensed', sans-serif;}
		.relax .watch {}
		.relax .watch-face {position:relative; z-index:4; width:120px; height:120px; background:#1f5d8e; box-shadow:inset 0 0 10px rgba(0,0,0,0.85); -moz-box-shadow:inset 0 0 10px rgba(0,0,0,0.85); -webkit-box-shadow:inset 0 0 10px rgba(0,0,0,0.85);}
		.relax .watch-scale {width:2px; height:5px; background:#eee; box-shadow: 0 0 3px rgba(0,0,0,0.75); -moz-box-shadow: 0 0 3px rgba(0,0,0,0.75); -webkit-box-shadow: 0 0 3px rgba(0,0,0,0.75);}
		.relax .watch-scale-1 {position:absolute; top:3px; left:59px;}
		.relax .watch-scale-15 {position:absolute; top:59px; right:5px; transform:rotate(90deg); -moz-transform:rotate(90deg); -webkit-transform:rotate(90deg);}
		.relax .watch-scale-30 {position:absolute; bottom:3px; left:59px;}
		.relax .watch-scale-45 {position:absolute; top:59px; left:5px; transform:rotate(90deg); -moz-transform:rotate(90deg); -webkit-transform:rotate(90deg);}
		.relax .watch-pivot {position:absolute; z-index:5; top:58px; left:58px; width:4px; height:4px; background:#eee; box-shadow:0 0 3px rgba(0,0,0,0.75); -moz-box-shadow:0 0 3px rgba(0,0,0,0.75); -webkit-box-shadow:0 0 3px rgba(0,0,0,0.75);}
		.relax .watch-second-niddle-pivot {position:absolute; z-index:5; top:0; left:0; width:4px; height:4px; background: #eee; animation:watch-niddle-move 6s linear infinite; -moz-animation:watch-niddle-move 6s linear infinite;  -webkit-animation:watch-niddle-move 6s linear infinite;}
		.relax .watch-second-niddle {position:absolute; top:-54px; left:1px; width:2px; height:70px; background: #eee; box-shadow: 0 0 3px rgba(0,0,0,0.75); -moz-box-shadow: 0 0 3px rgba(0,0,0,0.75); -webkit-box-shadow: 0 0 3px rgba(0,0,0,0.75);}

		@keyframes watch-niddle-move {0% {transform:rotate(0deg);} 100% {transform:rotate(360deg);}}
		@-moz-keyframes watch-niddle-move {0% {-moz-transform:rotate(0deg);} 100% {-moz-transform:rotate(360deg);}}
		@-webkit-keyframes watch-niddle-move {0% {-webkit-transform:rotate(0deg);} 100% {-webkit-transform:rotate(360deg);}}

		.relax .watch-minute-niddle-pivot {position:absolute; z-index:4; top:0; left:0; width:4px; height:4px; background: #eee; animation:watch-niddle-move 360s linear infinite; -moz-animation:watch-niddle-move 360s linear infinite;  -webkit-animation:watch-niddle-move 360s linear infinite; }

		.relax .watch-minute-niddle {position:absolute; top:-50px; left:1px; width:2px; height:58px; background: #eee; box-shadow: 0 0 3px rgba(0,0,0,0.75); -moz-box-shadow: 0 0 3px rgba(0,0,0,0.75); -webkit-box-shadow: 0 0 3px rgba(0,0,0,0.75); }
		.relax .watch-minute-deco {position:absolute; z-index:3; top:-45px; left:1px; width:2px; height:20px; background:#666; transform: scaleX(0.5); -moz-transform: scaleX(0.5); -webkit-transform: scaleX(0.5);}

		.relax .watch-hour-niddle-pivot {position:absolute; z-index:3; top:0; left:0; width:4px; height:4px; background: #eee; animation:watch-niddle-move 4320s linear infinite; -moz-animation:watch-niddle-move 4320s linear infinite;  -webkit-animation:watch-niddle-move 4320s linear infinite;}

		.relax .watch-hour-niddle {position:absolute; top:-45px; left:1px; width:2px; height:52px; background: #eee; box-shadow: 0 0 3px rgba(0,0,0,0.75); -moz-box-shadow: 0 0 3px rgba(0,0,0,0.75); -webkit-box-shadow: 0 0 3px rgba(0,0,0,0.75);}
		.relax .watch-hour-deco {position:absolute; z-index:3; top:-41px; left:1px; width:2px; height:15px; background:#666; transform: scaleX(0.5); -moz-transform: scaleX(0.5); -webkit-transform: scaleX(0.5);}

		.relax .watch-face-label {position:absolute; z-index:2; top:10px; left:30px; text-align:center; width:60px; height:90px; background:transparent; color:#fff;}
		.relax .watch-face-label-1 {font-size:5px; letter-spacing:1px;}
		.relax .watch-face-label-2 {font-size:3px; margin-bottom:1px;}
		.relax .watch-face-label-3 {font-size:4px; font-family: 'Cedarville Cursive', cursive; margin-bottom:55px;}
		.relax .watch-face-label-4 {font-size:4px;}

		.relax .watch-crown {position:relative; width:10px; height:10px; margin:0 auto 5px;}
		.relax .watch-crown-base {position:absolute; bottom:0; left:2px; width:6px; height:5px; background:#eee;}
		.relax .watch-crown-base-hole {position:absolute; bottom:1px; left:1px; width:4px; height:2px; background:#1f5d8e;}

		.relax .crown-1 {position:absolute; top:-3px; left:0; width:1px; height:7px; background:#eee; transform:rotate(-30deg); -moz-transform:rotate(-30deg); -webkit-transform:rotate(-30deg);}
		.relax .crown-2 {position:relative; display:block; margin:-4px auto 0; width:1px; height:7px; background:#eee;}
		.relax .crown-3 {position:absolute; top:-3px; right:0; width:1px; height:7px; background:#eee; transform:rotate(30deg); -moz-transform:rotate(30deg); -webkit-transform:rotate(30deg);}

		.relax .crown-ball-1 {position: absolute; top: -1px; left:-1px; width: 3px; height: 3px; background:#eee; transform: scale(0.7); -moz-transform: scale(0.7); -webkit-transform: scale(0.7);}
		.relax .crown-ball-2 {position: absolute; top: -1px; left:-1px; width: 3px; height: 3px; background:#eee; transform: scale(0.7); -moz-transform: scale(0.7); -webkit-transform: scale(0.7);}
		.relax .crown-ball-3 {position: absolute; top: -1px; left:-1px; width: 3px; height: 3px; background:#eee; transform: scale(0.7); -moz-transform: scale(0.7); -webkit-transform: scale(0.7);}

		.relax .watch-face-outter {position:relative;}
		.relax .watch-rim {position:absolute; z-index:3; top:-9px; left:-9px; width:138px; height:138px; background: #ccc; background: -moz-linear-gradient(top,  #ccc 0%, #bbb 100%); background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ccc), color-stop(100%,#bbb)); background: -webkit-linear-gradient(top,  #ccc 0%,#bbb 100%); background: -o-linear-gradient(top,  #ccc 0%,#bbb 100%); background: -ms-linear-gradient(top,  #ccc 0%,#bbb 100%); background: linear-gradient(to bottom,  #ccc 0%,#bbb 100%); filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ccc', endColorstr='#bbb',GradientType=0 ); box-shadow: 1px 1px 3px #111; -moz-box-shadow: 1px 1px 3px #111; -webkit-box-shadow: 1px 1px 3px #111;
}
}
	</style>
<% end %>
